{
  "experimentalFeaturesEnabled": {
    "paramsFiles": true,
    "extensibility": false // breaks `existing` where no resource exists.
  },
  "analyzers": {
    "core": {
      "rules": {
        "no-loc-expr-outside-params": {
          "level": "off"
        },
        "no-unused-params": {
          "level": "warning"
        }
      }
    }
  }
}